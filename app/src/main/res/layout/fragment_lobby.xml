<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LobbyView.LobbyFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profileDP"
            android:background="@drawable/image_round_corner"
            android:src="@mipmap/ic_launcher"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account"
                android:text="@string/account"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/YourDP"
                android:text="@string/user_profile"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourImage"
                android:text="@string/your_images"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/YourVideo"
                android:text="@string/your_videos"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"/>



</LinearLayout>